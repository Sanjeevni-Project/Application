<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.finalproject.it.sanjeevni">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".activities.SearchDoctor.ApplicationClass"
        android:allowBackup="true"
        android:icon="@mipmap/abc"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/abc"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.SearchDoctor.DoctorDetails"
            android:parentActivityName=".activities.SearchDoctor.searchMain"
            android:windowSoftInputMode="stateVisible">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.SearchDoctor.searchMain" />
        </activity>
        <activity android:name=".activities.SearchDoctor.searchMain"></activity>
        <activity android:name=".activities.loginActivity" />
        <activity
            android:name=".activities.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.WelcomeActivity"
            android:theme="@style/HiddenTitleTheme" />
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.SearchActivity"
            android:theme="@style/HiddenTitleTheme" />
        <activity android:name=".activities.SearchResultActivity" />
        <activity android:name=".activities.AddReviewActivity" />
        <activity
            android:name=".activities.TipsFullActivity"
            android:label="@string/title_activity_test"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.DiseaseFullActivity"
            android:label="@string/title_activity_disease_full"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>