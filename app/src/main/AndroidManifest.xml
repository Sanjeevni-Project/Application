<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.finalproject.it.sanjeevni">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".app.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/abc"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/abc"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.ui.login.Approve_Requests"
            android:parentActivityName=".activities.WelcomeActivity"></activity>
        <activity android:name=".activities.ui.login.DoctorRegister" />
        <activity
            android:name=".fragment.ProfileView"
            android:parentActivityName=".activities.WelcomeActivity" />
        <activity android:name=".activities.searchDoctor.searchMain"
            android:parentActivityName=".activities.WelcomeActivity"
            android:windowSoftInputMode="stateVisible">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.WelcomeActivity" />
        </activity>
            android:name=".activities.ui.login.Verification_phone"
            android:parentActivityName=".activities.ui.login.RegisterActivity" />
        <activity
            android:name=".activities.bloodBank.bbDonate"
            android:parentActivityName=".activities.bloodBank.BloodBank"
            android:windowSoftInputMode="stateVisible">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.bloodBank.BloodBank" />
        </activity>
        <activity
            android:name=".activities.bloodBank.bbRegister"
            android:parentActivityName=".activities.bloodBank.BloodBank"
            android:windowSoftInputMode="stateVisible">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.bloodBank.BloodBank" />
        </activity>
        <activity
            android:name=".activities.bloodBank.BloodBank"
            android:parentActivityName=".activities.WelcomeActivity"
            android:windowSoftInputMode="stateVisible">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.WelcomeActivity" />
        </activity>
        <activity
            android:name=".activities.ui.login.LoginActivity"
            android:parentActivityName=".activities.WelcomeActivity" />
        <activity
            android:name=".activities.ui.login.RegisterActivity"
            android:label="Time to get Registered!"
            android:parentActivityName=".activities.ui.login.LoginActivity" />
        <activity
            android:name=".activities.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.WelcomeActivity" /> <!-- android:theme="@style/HiddenTitleTheme" -->
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name" />
    </application>

</manifest>