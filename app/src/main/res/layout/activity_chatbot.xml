        android:text="-->"
        android:textColor="@color/colorAccent"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="288dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
