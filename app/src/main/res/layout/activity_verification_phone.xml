<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ui.login.Verification_phone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="0dp"
                android:layout_marginBottom="50dp"
                android:id="@+id/one_step"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:paddingTop="0.8in"
                android:paddingBottom="15dp"
                android:text="Just One Step Away ...!!"
                android:background="@color/splash_bg_color"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp"
                android:gravity="center"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/verify_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawableTop="@drawable/ic_phone_verify"
                android:drawablePadding="0dp"
                android:text="OTP Verification"
                android:textAlignment="center"
                android:layout_below="@id/one_step"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="36dp" />
            <TextView
                android:id="@+id/verify_subtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter verification code if not automatically authenticated."
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16dp"
                android:layout_below="@id/verify_text"/>
            <EditText
                android:id="@+id/verify_otp"
                android:layout_width="1.5in"
                android:layout_height="45dp"
                android:hint="Please Check for OTP"
                android:textAlignment="center"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:outlineProvider="paddedBounds"
                android:layout_below="@+id/verify_subtext"/>
            <Button
                android:layout_width="0.8in"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/verify_btn"
                android:text="Verify"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/verify_otp"/>

            <ProgressBar
                android:id="@+id/loading"
                android:layout_width="88dp"
                android:layout_height="145dp"
                android:layout_below="@id/verify_subtext"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-22dp"
                android:visibility="invisible" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_alignParentBottom="true"
                android:background="@color/splash_bg_color"/>
        </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>